<!DOCTYPE html>
<html dir="ltr" lang="en-US">
{{>head }}

<body class="stretched">

	<!-- Document Wrapper
	============================================= -->
	<div id="wrapper" class="clearfix" style>

		<!-- Header
		============================================= -->
		{{>nav }}
		<!-- Page Sub Menu
		============================================= -->
		<div id="page-menu" class="no-sticky">
			<div id="page-menu-wrap" class='custom-page-banner'>
				<div class="container clearfix">
					<div class="menu-title">gallery <span>{{galleryName}}</span></div>
				</div>
			</div>
		</div>

		<!-- Content
		============================================= -->
		<section id="content">

			<div class="content-wrap custom-background">

        <div class="container clearfix">
					<!-- Portfolio Items
					============================================= -->
					<div id="portfolio" class="portfolio grid-container clearfix">
            {{#gallery}}
  						<article class="portfolio-item pf-media pf-icons custom-hover">
  							<div class="portfolio-image">
  								<a href="/image/{{name}}">
                    <!-- gal covers eventually needs to be changed -->
  									<img src="/art_imgs/{{galleryName}}/{{imagePath}}" alt="Open Imagination">
  								</a>
  							</div>
  							<div class="portfolio-desc">
  								<h3><a class='custom-image-title'href="portfolio-single.html">{{name}}</a></h3>
									<div class='details'>
										<div class='description'>{{description}}</div>
										<div class='dimensions'>{{dimensions}}</div>
									</div>
  							</div>
  						</article>
            {{/gallery}}
					</div><!-- #portfolio end -->

				</div>

			</div>

		</section><!-- #content end -->

		<!-- Footer
		============================================= -->
		{{>footer}}
	</div><!-- #wrapper end -->

	<!-- Go To Top
	============================================= -->
	<div id="gotoTop" class="icon-angle-up" style></div>

	<!-- External JavaScripts
	============================================= -->
	<script src="/js/jquery.js"></script>
	<script src="/js/plugins.js"></script>
	<script src='/js/custom.js'></script>

	<!-- Footer Scripts
	============================================= -->
	<script src="/js/functions.js"></script>

</body>
</html>
